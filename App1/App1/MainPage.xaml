<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Entry x:Name="txtuser" Placeholder="Usuario" Keyboard="Numeric" AbsoluteLayout.LayoutBounds=".5,.2,.9,.07" AbsoluteLayout.LayoutFlags="All" />
            <Entry x:Name="txtpass" Placeholder="Password" IsPassword="True" AbsoluteLayout.LayoutBounds=".5,.3,.9,.07" AbsoluteLayout.LayoutFlags="All" />
            <Button x:Name="btnLogin" Text="Entrar" Clicked="btnLogin_Clicked" AbsoluteLayout.LayoutBounds=".5,.4,.5,.07" AbsoluteLayout.LayoutFlags="All" BackgroundColor="SeaGreen" TextColor="WhiteSmoke" />
        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>