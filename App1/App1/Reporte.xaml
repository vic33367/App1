<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Reporte">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label x:Name="lblId" Text="{Binding Id}"  AbsoluteLayout.LayoutBounds=".5,.01,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
            <Label x:Name="lblNombre" Text="{Binding Tarea}"  AbsoluteLayout.LayoutBounds=".5,.07,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
            <Label x:Name="lblApe1" Text="{Binding Asignado}"  AbsoluteLayout.LayoutBounds=".5,.13,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
            <Label x:Name="lblApe2" Text="{Binding FechaTerm}"  AbsoluteLayout.LayoutBounds=".5,.19,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
            <Editor x:Name="edit1" Text="Escribe aqui!" AbsoluteLayout.LayoutBounds=".5,.35,.9,.35" AbsoluteLayout.LayoutFlags="All"  />
            <Button x:Name="btnEnviar" Clicked="btnEnviar_Clicked" Text="Enviar" AbsoluteLayout.LayoutBounds=".5,.7,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
            <Button x:Name="btnConfirmar" Text="Confirmar" AbsoluteLayout.LayoutBounds=".5,.8,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
            <Button x:Name="btnregresar" Text="Regresar" AbsoluteLayout.LayoutBounds=".5,.9,.9,.05" AbsoluteLayout.LayoutFlags="All"  />
</AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>